<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_selected="true">
    <shape android:shape="rectangle">
      <stroke android:width="2dp" android:color="?file_picker_select_border_color"/>
      <corners android:radius="10dp"/>
      <size
        android:width="16dp"
        android:height="16dp"/>
      <solid android:color="?file_picker_select_solid_color"/>
    </shape>
  </item>

  <item>
    <shape android:shape="rectangle">
      <stroke android:width="2dp" android:color="?file_picker_select_border_color"/>
      <corners android:radius="10dp"/>
      <size
        android:width="16dp"
        android:height="16dp"/>
    </shape>
  </item>


</selector>